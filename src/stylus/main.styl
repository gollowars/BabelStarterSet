@import "./_normalize"
@import "./_reset"
@import "./_setting"
@import "./_animate"
@import "./_util"
@import 'jeet'
@import './_fullpage.min'

$borderWidth = 15px
$borderColor = #2c3e50
body 
  box-sizing: border-box
//////////////////////////////
// header
//////////////////////////////
header
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 70px
  z-index: 11
  box-sizing: border-box
  padding: 20px
  overflow: hidden
  .header-title
    float: left
  
//////////////////////////////
// nav
//////////////////////////////
nav
  width: 150px
  float: right
  +sp($pcWidth)
    width: 100%
    // position: fixed
    // top: 0
    // left: 0
  li
    col(1/2,0,0,0)
    +sp($pcWidth)
      col(1,0,0,0)
      text-align: center

//////////////////////////////
// footer
//////////////////////////////
footer
  clear: both
  padding: 15px 30px


//////////////////////////////
// component
//////////////////////////////
.container
  position: absolute
  padding-top: 70px
  top: 0
  left: 0